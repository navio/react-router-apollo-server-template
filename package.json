{
  "name": "react-router-apollo-ssr",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run build:server && node server.js",
    "build": "npm run build:server && npx react-router build",
    "build:server": "tsc --project server/tsconfig.json",
    "start": "cross-env NODE_ENV=production node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:apply": "biome check . --apply",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --cache --fix",
    "check:strict": "eslint . --cache",
    "typecheck": "tsc --noEmit",
    "ci:check": "npm run check && npm run lint && npm run typecheck",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@apollo/server": "^5.0.0",
    "@as-integrations/express4": "^1.1.2",
    "@graphql-tools/schema": "^10.0.0",
    "@hookform/resolvers": "^5.2.1",
    "@react-router/express": "^7.7.1",
    "@react-router/node": "^7.7.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "isbot": "^4.4.0",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-router": "^7.0.1",
    "react-router-dom": "^7.8.0",
    "zod": "^4.0.15",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@eslint/js": "^9.33.0",
    "@react-router/dev": "^7.8.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.1",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome format --write --no-errors-on-unmatched"
    ],
    "*.{json,md}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
